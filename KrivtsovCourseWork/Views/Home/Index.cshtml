@model List<KrivtsovCourseWork.Models.DatabaseModel.Doctor>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать</h1>
</div>
@{
    
    if (Model.Count != 0)
    {
        <h1 class="display-5 fw-light mt-5">Наши Врачи</h1>
    }
    
    <div class="row cart-margin mt-2">
        @foreach (var doctor in Model)
        {
            <div class="col-auto">
                <div class="card h-auto mt-3 mb-5" style="width: 25.5rem">
                    <img src="@Html.DisplayFor(model => doctor.PhotoUrl)" class="card-img-top p-3 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@doctor.SecondName @doctor.FirstName @doctor.MiddleName</h5>
                        <p class="mt-3 fs-6"><text class="fw-bold">@doctor.JobTitle.Name</text></p>
                    </div>
                </div>
            </div>
        }
    </div>
}    